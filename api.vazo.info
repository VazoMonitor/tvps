server {
    listen 80;
    server_name vazo.info www.vazo.info;
    # Redireciona todo o tráfego HTTP para HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name vazo.info www.vazo.info;

    ssl_certificate /etc/letsencrypt/live/vazo.info/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/vazo.info/privkey.pem;

    # Se o front end for estático, defina o diretório raiz:
    root /var/www/vazo.info;  
    index index.html;

    # Se for uma aplicação Node rodando em outra porta, use proxy_pass
    # Exemplo:
    # location / {
    #     proxy_pass http://127.0.0.1:PORTA_DO_FRONT_END;
    #     proxy_set_header Host $host;
    #     proxy_set_header X-Real-IP $remote_addr;
    #     proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    # }

    # Caso os arquivos sejam estáticos:
    location / {
        try_files $uri $uri/ =404;
    }
}
