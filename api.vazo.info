server {
    listen 80;
    server_name api.vazo.info;
    # Redireciona todo o tr√°fego HTTP para HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name api.vazo.info;

    ssl_certificate /etc/letsencrypt/live/api.vazo.info/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.vazo.info/privkey.pem;

    # Configura o proxy reverso para a API Node que roda na porta 8880
    location / {
        proxy_pass http://127.0.0.1:8880;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
