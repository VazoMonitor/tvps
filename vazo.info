# Redirecionamento de HTTP para HTTPS
server {
    listen 80;
    server_name vazo.info www.vazo.info api.vazo.info;

    # Redireciona todo tráfego HTTP para HTTPS
    return 301 https://$host$request_uri;
}

# Configuração para o Frontend React (Na porta 80)
server {
    listen 443 ssl;
    server_name vazo.info www.vazo.info api.vazo.info;

    ssl_certificate /etc/letsencrypt/live/api.vazo.info/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.vazo.info/privkey.pem;

    # Localização dos arquivos do frontend React (ajuste para o diretório onde seu React está)
    root /root/FrontEnd;  
    index index.html;

    # Servindo arquivos estáticos do frontend React
    location / {
        try_files $uri $uri/ =404;
    }
}

# Configuração para a API Node.js (Porta 8880)
server {
    listen 443 ssl;
    server_name api.vazo.info;

    ssl_certificate /etc/letsencrypt/live/api.vazo.info/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.vazo.info/privkey.pem;

    location / {
        proxy_pass http://127.0.0.1:8880;  # Redireciona as requisições da API para a porta 8880
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
