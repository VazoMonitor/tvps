server {
    listen 80;
    server_name vazo.info www.vazo.info api.vazo.info;

    # Redireciona todo o tráfego HTTP para HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name vazo.info www.vazo.info;

    ssl_certificate /etc/letsencrypt/live/vazo.info/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/vazo.info/privkey.pem;

    # Servindo o Frontend Estático
    root /var/www/vazo.info;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }
}

server {
    listen 443 ssl;
    server_name api.vazo.info;

    ssl_certificate /etc/letsencrypt/live/api.vazo.info/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.vazo.info/privkey.pem;

    location / {
        proxy_pass http://127.0.0.1:8880;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }
}
